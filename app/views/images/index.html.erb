<div class="container" style="margin-top: 150px;">
  <p id="notice"><%= notice %></p>
  <h1><%= t "list_images" %></h1>

  <table>
    <thead>
      <tr>
        <th width="200"><%= t "upload_by" %></th>
        <th width="100"><%= t "address" %></th>
        <th width="400"><%= t "image" %></th>
        <th width="100"><%= t "like_number" %></th>
        <th width="250"><%= t "description" %></th>
        <th width="100"><%= t "created_at" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.user_id %></td>
          <td><%= image.address %></td>
          <td><%= link_to image_tag(image.image), image %></td>
          <td><%= image.like_number %></td>
          <td><%= image.description %></td>
          <td><%= image.created_at %></td>
          <td><%= link_to t("show"), image, class: "btn btn-info" %></td>
          <td><%= link_to t("edit"), edit_image_path(image), class: "btn btn-info" %></td>
          <td><%= link_to t("delete"), image,
            method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to t("new_image"), new_image_path, class: "btn btn-primary" %>
</div>

<%= render "pages/image_share" %>
<%= render "pages/about" %>

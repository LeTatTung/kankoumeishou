<% provide :title, @title %>
<div class="row show-user-info">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag avatar_profile(@user), class: "image-user-profile"%>
      <h1><%= @user.name %></h1>
      <% if @user.current_user? current_user %>
        <span><%= link_to t("user.new-image"), new_image_path %></span>
      <% else %>
        <span><%= link_to t("view-my-profile"), @user %></span>
      <% end %>
      <span><strong><%= t "number-images" %><%= @user.images.count %></strong></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to user do %>
              <%= image_tag avatar_profile(user), class: "image-user-profile"%>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>


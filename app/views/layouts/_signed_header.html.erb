  <div class="container header-new">
    <div class="navbar-header page-scroll">
      <p id="title", class="navbar-brand page-scroll">
        <%= link_to t(:title), root_url, class: "navbar-brand page-scroll ltt-title" %>
      </p>
    </div>
    <%= search_form_for @q, url: search_images_path, html: { method: :post }  do |f| %>
      <div class="text-search col-md-4 ui search">
        <%= f.text_field :address, id: "search", placeholder: t("action.search") %>
      </div>
      <div class="search-button col-md-1">
        <%= f.submit "", class: "btn" %>
      </div>
    <% end %>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li class="hidden">
          <a href="#page-top"></a>
